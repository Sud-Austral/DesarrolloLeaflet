<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Ejemplo 3</title>
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no">
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        #map {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 100%;
        }

        .legend {
            background-color: #fff;
            border-radius: 3px;
            bottom: 30px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
            padding: 10px;
            position: absolute;
            right: 10px;
            z-index: 1;
        }

            .legend h4 {
                margin: 0 0 10px;
                text-align: center;
            }

            .legend div span {
                border-radius: 50%;
                display: inline-block;
                height: 10px;
                margin-right: 5px;
                width: 10px;
            }
    </style>
</head>
<body>
    <style>
        .mapboxgl-popup {
            max-width: 400px;
            font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
        }
    </style>
    <div id="map"></div>

    <div id="state-legend" class="legend">
        <h4>MUNICIPIOS</h4>
        <div><span style="background-color: #1e82ad"></span>HOMBRES: 52.8%</div>
        <div><span style="background-color: #f5498f"></span>MUJERES: 47.2%</div>
    </div>

    <div id="county-legend" class="legend" style="display: none">
        <h4>MUNICIPIOS</h4>
        <div><span style="background-color: #723122"></span>1,000,000</div>
        <div><span style="background-color: #8b4225"></span>500,000</div>
        <h4>MUNICIPIOS</h4>
        <div><span style="background-color: #1e82ad"></span>HOMBRES</div>
        <div><span style="background-color: #f5498f"></span>MUJERES</div>
    </div>

    <script>
function getParameterByName(name) {
    name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
    var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
    results = regex.exec(location.search);
    return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
}

var arhivo = getParameterByName('file');

mapboxgl.accessToken = 'pk.eyJ1IjoiaGVjdG9ybWFyY2lhbGZsb3Jlc21lamlhIiwiYSI6ImNrc3Nha2Z0YjB0dGoyd28zY3VrY2plMmMifQ.uREmpaGz3s2SgpHVQc7Rdg';
// Create a new map.
const map = new mapboxgl.Map({
container: 'map',
style: 'mapbox://styles/hectormarcialfloresmejia/ckst4m5ky3tll18pso7xair9z',
center: [-70.66557950912359, -33.48621795345005],
zoom: 3
});

map.on('load', () => {
// Add a source for the state polygons.
map.addSource('states', {
'type': 'geojson',
'data': 'https://raw.githubusercontent.com/hectorflores329/mapa_insumos/main/municipios/json/' + arhivo + '.json'
});

// Add a layer showing the state polygons.
map.addLayer({
'id': 'states-layer',
'type': 'fill',
'source': 'states',
'paint': {
'fill-color': 'rgba(200, 100, 240, 0.4)',
'fill-outline-color': 'rgba(200, 100, 240, 1)'
}
});

// When a click event occurs on a feature in the states layer,
// open a popup at the location of the click, with description
// HTML from the click event's properties.
map.on('click', 'states-layer', (e) => {
new mapboxgl.Popup()
.setLngLat(e.lngLat)
//
// .setHTML(e.features[0].properties.pais)
.setHTML('<h3>Código de región: ' + e.features[0].properties.COD_REGION + '</h3><p> REGIÓN: ' + e.features[0].properties.REGION + '</p><p> NOMBRE DEL POLÍGONO: ' + e.features[0].properties.Nombre + '</p><p><img src="https://raw.githubusercontent.com/hectorflores329/mapa_insumos/main/municipios/img/chart.png" alt="Data Intelligence" /></p>')
.addTo(map);
});
// Change the cursor to a pointer when
// the mouse is over the states layer.
map.on('mouseenter', 'states-layer', () => {
map.getCanvas().style.cursor = 'pointer';
});

// Change the cursor back to a pointer
// when it leaves the states layer.
map.on('mouseleave', 'states-layer', () => {
map.getCanvas().style.cursor = '';
});
});
    </script>

</body>
</html>
